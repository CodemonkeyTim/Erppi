<div class="container">

<h2>Työlista</h2>

<br />

<h3>Avoimet</h3>

<br />

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Työnumero</th>
			<th>Nimi</th>
			<th>Osoite</th>
			<th>Toiminnot</th>
		</tr>
	</thead>
	
	<tbody>
		<% @jobs.each do |job| %>
			<tr class="job-row" onclick="window.location = '/tyolista/<%= job.id%>'">
				<td><%= job.id %></td>
				<td><%= job.name %></td>
				<td><%= job.address.street %></td>
				<td><div class="btn btn-small"><i class="icon-edit"></i> Muokkaa</div> <div class="btn btn-small"><i class="icon-folder-open"></i> Arkistoi</div></td>
			</tr>
		<% end %>
	</tbody>
</table>


<div class="btn btn-large btn-block">Avaa arkistoidut</div>
</div>