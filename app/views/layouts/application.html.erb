<!DOCTYPE html>
<html>
<head>
  <title>Erppi</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="container">
	<% unless flash[:notice].nil? %>
		<div class="row">
			<div class="span12 alert alert-info">	
				<%= flash[:notice]%>
			</div>
		</div>
	<% end %>
	
	<% unless flash[:alert].nil? %>
		<div class="row">
			<div class="span12 alert alert-success">	
				<%= flash[:alert] %>
			</div>
		</div>
	<% end %>
			
	<% unless flash[:error].nil? %>
		<div class="row">
			<div class="span12 alert alert-error">	
				<%= flash[:alert] %>
			</div>
		</div>
	<% end %>
	
	
	<div class="row">
		<div class="span12">
			<div class="row">
				<div class="span12">
					
				</div>
			</div>
			<%= yield %>	
		</div>
	</div>
</div>


</body>
</html>
